{
  "$schema": "http://json-schema.org/schema",
  "$id": "SchematicsSingleSpaAngularNgAdd",
  "title": "single-spa-angular ng-add",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "cors": {
      "type": "boolean",
      "description": "Whether to configure angular.json for cors",
      "$default": {
        "$source": "false"
      }
    },
    "outputMainJs": {
      "type": "boolean",
      "description": "Whether to configure angular.json to build a main.js file, rather than content hashed.",
      "$default": {
        "$source": "false"
      }
    },
    "routing": {
      "type": "boolean",
      "description": "Whether to add an EmptyRoute component",
      "$default": {
        "$source": "false"
      }
    }
  },
  "required": []
}
